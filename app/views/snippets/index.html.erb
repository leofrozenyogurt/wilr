<h1>Listing snippets</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Language</th>
    <th>Plain code</th>
    <th>Highlighted code</th>
    <th>Blog</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @snippets.each do |snippet| %>
  <tr>
    <td><%= snippet.name %></td>
    <td><%= snippet.language %></td>
    <td><%= snippet.plain_code %></td>
    <td><%= snippet.highlighted_code %></td>
    <td><%= snippet.blog_id %></td>
    <td><%= link_to 'Show', snippet %></td>
    <td><%= link_to 'Edit', edit_snippet_path(snippet) %></td>
    <td><%= link_to 'Destroy', snippet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Snippet', new_snippet_path %>
